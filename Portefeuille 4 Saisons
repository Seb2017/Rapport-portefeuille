    <script>
        // Donn√©es de performance historique annuelles (en pourcentage)
        const performanceData = [
            { year: 2010, portefeuille: 15.23, cac40: -3.3 },
            { year: 2011, portefeuille: -1.88, cac40: -17.0 },
            { year: 2012, portefeuille: 8.43, cac40: 15.2 },
            { year: 2013, portefeuille: 9.33, cac40: 18.0 },
            { year: 2014, portefeuille: 9.43, cac40: -0.5 },
            { year: 2015, portefeuille: 10.40, cac40: 8.5 },
            { year: 2016, portefeuille: 3.50, cac40: 4.9 },
            { year: 2017, portefeuille: 4.78, cac40: 9.3 },
            { year: 2018, portefeuille: -0.65, cac40: -10.9 },
            { year: 2019, portefeuille: 15.88, cac40: 26.4 },
            { year: 2020, portefeuille: 9.88, cac40: -7.1 },
            { year: 2021, portefeuille: 16.45, cac40: 28.9 },
            { year: 2022, portefeuille: -10.63, cac40: -9.5 },
            { year: 2023, portefeuille: 6.75, cac40: 16.5 },
            { year: 2024, portefeuille: 9.73, cac40: 8.0 },
            { year: 2025, portefeuille: 32.55, cac40: 7.6 } // 2025 YTD
        ];

        // Taux Actuariel Global (TAG) calcul√© sur 16 ans (2010-2025 YTD)
        const ANNUAL_CAGR = 0.1017; // 10.17%

        // --- FONCTIONS UTILITAIRES ---
        function formatCurrency(amount) {
            return new Intl.NumberFormat('fr-FR', {
                style: 'currency',
                currency: 'EUR',
                minimumFractionDigits: 2
            }).format(amount);
        }

        function updateDurationDisplay() {
            const duration = document.getElementById('durationYears').value;
            document.getElementById('durationDisplay').textContent = duration;
            document.getElementById('finalDurationDisplay').textContent = duration;
        }

        // --- NOUVEAU: Fonction de redimensionnement dynamique ---
        function resizeIframeToContent() {
            // Cible le conteneur principal qui d√©tient tout le contenu
            const container = document.getElementById('mainContainer');
            if (container) {
                // Lit la hauteur de d√©filement du conteneur (hauteur totale du contenu)
                // Ajoute une marge de 100px de s√©curit√© pour ne pas couper le bas du pied de page
                const newHeight = container.scrollHeight + 100; 
                
                // Applique cette hauteur aux √©l√©ments HTML et BODY pour s'assurer
                // qu'ils occupent l'espace exact et d√©clencher le redimensionnement de l'h√¥te.
                document.documentElement.style.height = `${newHeight}px`;
                document.body.style.minHeight = `${newHeight}px`;
            }
        }


        // --- LOGIQUE DU GRAPHIQUE DE PERFORMANCE ---
        function createCumulativeChart() {
            const labels = performanceData.map(d => d.year);
            
            // Initialisation avec une base de 100
            let cumulativePortefeuille = [100];
            let cumulativeCac40 = [100];
            
            for (let i = 0; i < performanceData.length; i++) {
                const prevPortefeuille = cumulativePortefeuille[i];
                const newPortefeuille = prevPortefeuille * (1 + performanceData[i].portefeuille / 100);
                cumulativePortefeuille.push(newPortefeuille);

                const prevCac40 = cumulativeCac40[i];
                const newCac40 = prevCac40 * (1 + performanceData[i].cac40 / 100);
                cumulativeCac40.push(newCac40);
            }

            // Suppression de l'√©l√©ment initial de base 100 (uniquement pour l'alignement des labels)
            cumulativePortefeuille.shift(); 
            cumulativeCac40.shift(); 

            const ctx = document.getElementById('performanceChart').getContext('2d');
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Portefeuille 4 Saisons (Base 100)',
                            data: cumulativePortefeuille,
                            borderColor: '#059669', // Emerald 600
                            backgroundColor: 'rgba(5, 150, 105, 0.1)',
                            fill: true,
                            tension: 0.3,
                            pointRadius: 4,
                            pointHoverRadius: 6
                        },
                        {
                            label: 'CAC 40 (PX1) (Base 100)',
                            data: cumulativeCac40,
                            borderColor: '#3b82f6', // Blue 500
                            backgroundColor: 'rgba(59, 130, 246, 0.1)',
                            fill: false,
                            tension: 0.3,
                            borderDash: [5, 5],
                            pointRadius: 2
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top', labels: { font: { size: 10 } } }, // R√©duction de la taille de la police pour mobile
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.formattedValue + ' pts';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            title: {
                                display: true,
                                text: 'Performance Cumulative (Base 100 en 2010)',
                                font: { size: 10 }
                            },
                            ticks: { font: { size: 10 } },
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Ann√©e',
                                font: { size: 10 }
                            },
                            ticks: { font: { size: 10 } },
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        }
        
        // --- LOGIQUE DU SIMULATEUR ---
        function runSimulation() {
            const initialCapital = parseFloat(document.getElementById('initialCapital').value) || 0;
            const monthlyPayment = parseFloat(document.getElementById('monthlyPayment').value) || 0;
            const durationYears = parseInt(document.getElementById('durationYears').value, 10) || 1;

            updateDurationDisplay();

            if (initialCapital < 0 || monthlyPayment < 0 || durationYears < 1) {
                // Gestion des valeurs invalides
                document.getElementById('finalDisplay').textContent = "Valeurs invalides.";
                document.getElementById('totalInvestedDisplay').textContent = "0,00 ‚Ç¨";
                document.getElementById('totalGainsDisplay').textContent = "0,00 ‚Ç¨";
                return;
            }

            // 1. Calcul du capital final pour le placement unique (Formule de capitalisation)
            let finalCapital = initialCapital * Math.pow(1 + ANNUAL_CAGR, durationYears);

            // 2. Calcul des versements mensuels (Formule des annuit√©s)
            let futureValueMonthly = 0;

            if (monthlyPayment > 0) {
                // Taux mensuel √©quivalent
                const monthlyRate = Math.pow(1 + ANNUAL_CAGR, 1/12) - 1; 
                const totalMonths = durationYears * 12;

                // Future Value of Annuity Due (Versements en d√©but de p√©riode, plus pr√©cis pour les versements programm√©s)
                const numerator = Math.pow(1 + monthlyRate, totalMonths) - 1;
                futureValueMonthly = monthlyPayment * (numerator / monthlyRate) * (1 + monthlyRate);
            }

            finalCapital += futureValueMonthly;
            finalCapital = Math.round(finalCapital * 100) / 100; // Arrondi √† deux d√©cimales

            // 3. Calcul du capital total investi
            const totalInvested = initialCapital + (monthlyPayment * durationYears * 12); 

            // 4. Calcul des gains
            const totalGains = finalCapital - totalInvested;

            // 5. Affichage des r√©sultats
            document.getElementById('finalDisplay').textContent = formatCurrency(finalCapital);
            
            const totalInvestedDisplay = document.getElementById('totalInvestedDisplay');
            const totalGainsDisplay = document.getElementById('totalGainsDisplay');
            
            totalInvestedDisplay.textContent = formatCurrency(totalInvested);
            totalGainsDisplay.textContent = formatCurrency(totalGains);

            // Mise √† jour de la couleur des gains et du capital final
            const finalDisplayElement = document.getElementById('finalDisplay');
            finalDisplayElement.classList.remove('text-red-700', 'text-emerald-700');
            totalGainsDisplay.classList.remove('text-red-600', 'text-emerald-600');
            
            if (totalGains >= 0) {
                finalDisplayElement.classList.add('text-emerald-700');
                totalGainsDisplay.classList.add('text-emerald-600');
            } else {
                finalDisplayElement.classList.add('text-red-700');
                totalGainsDisplay.classList.add('text-red-600');
            }
            
            // IMPORTANT: Redimensionner apr√®s la mise √† jour des r√©sultats
            resizeIframeToContent();
        }


        // --- D√âMARRAGE DE L'APPLICATION (Optimis√© pour un chargement plus rapide) ---
        
        // 1. Redimensionnement IMM√âDIAT apr√®s que la structure du DOM est pr√™te (sans attendre les assets)
        document.addEventListener('DOMContentLoaded', function() {
            // √âcouteurs pour mettre √† jour et relancer la simulation et le redimensionnement lors de l'input
            document.getElementById('durationYears').addEventListener('input', runSimulation);
            document.getElementById('initialCapital').addEventListener('input', runSimulation);
            document.getElementById('monthlyPayment').addEventListener('input', runSimulation);
            document.getElementById('durationYears').addEventListener('input', updateDurationDisplay); // Mettre √† jour l'affichage de la dur√©e

            // Premier redimensionnement rapide pour donner une bonne hauteur de d√©part
            resizeIframeToContent(); 
        });

        // 2. T√¢ches lourdes (graphique) et redimensionnement final apr√®s le chargement complet des assets
        window.onload = function () {
            createCumulativeChart(); // Cr√©e le graphique
            runSimulation(); // Lance la simulation initiale et appelle resizeIframeToContent()
            
            // √âcouteur de redimensionnement de fen√™tre du navigateur
            window.addEventListener('resize', resizeIframeToContent);
            
            // Dernier redimensionnement de s√©curit√© apr√®s un court d√©lai pour s'assurer que le graphique est rendu
            setTimeout(resizeIframeToContent, 100); 
        };
    </script>
